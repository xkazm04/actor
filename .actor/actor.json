{
    "actorSpecification": 1,
    "name": "deep-research",
    "title": "Deep Research Actor",
    "description": "AI-powered deep research with Gemini and Google Search grounding",
    "version": "1.0",
    "buildTag": "latest",
    "meta": {
        "templateId": "python-playwright"
    },
    "input": "./INPUT_SCHEMA.json",
    "dockerfile": "../Dockerfile",
    "readme": "../README.md",
    "storages": {
        "dataset": {
            "actorSpecification": 1,
            "fields": {
                "finding_id": {
                    "type": "string",
                    "title": "Finding ID",
                    "description": "Unique identifier for the finding"
                },
                "session_id": {
                    "type": "string",
                    "title": "Session ID",
                    "description": "Research session identifier"
                },
                "finding_type": {
                    "type": "string",
                    "title": "Finding Type",
                    "description": "Type of finding: fact, event, actor, relationship, financial, evidence, pattern, prediction, gap"
                },
                "content": {
                    "type": "string",
                    "title": "Content",
                    "description": "Detailed finding content"
                },
                "summary": {
                    "type": "string",
                    "title": "Summary",
                    "description": "One-sentence summary of the finding"
                },
                "confidence_score": {
                    "type": "number",
                    "title": "Confidence Score",
                    "description": "Original confidence score (0.0-1.0)"
                },
                "adjusted_confidence": {
                    "type": "number",
                    "title": "Adjusted Confidence",
                    "description": "Confidence after verification adjustments (0.0-1.0)"
                },
                "temporal_context": {
                    "type": "string",
                    "title": "Temporal Context",
                    "description": "Time context: past, present, ongoing, prediction"
                },
                "extracted_data": {
                    "type": "object",
                    "title": "Extracted Data",
                    "description": "Structured data extracted from the finding"
                },
                "verification": {
                    "type": "object",
                    "title": "Verification",
                    "description": "Bias detection, expert sanity check, and cross-reference results"
                },
                "supporting_sources": {
                    "type": "array",
                    "title": "Supporting Sources",
                    "description": "Sources that support this finding"
                }
            },
            "views": {
                "findings": {
                    "title": "Research Findings",
                    "description": "All extracted findings from the research session",
                    "transformation": {
                        "fields": ["finding_id", "finding_type", "summary", "confidence_score", "adjusted_confidence", "temporal_context"]
                    },
                    "display": {
                        "component": "table",
                        "properties": {
                            "finding_id": { "label": "ID", "format": "text" },
                            "finding_type": { "label": "Type", "format": "text" },
                            "summary": { "label": "Summary", "format": "text" },
                            "confidence_score": { "label": "Confidence", "format": "number" },
                            "adjusted_confidence": { "label": "Adj. Confidence", "format": "number" },
                            "temporal_context": { "label": "Temporal", "format": "text" }
                        }
                    }
                }
            }
        }
    }
}
